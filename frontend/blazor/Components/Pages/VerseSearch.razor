@page "/verse-search"
@using PalavraConectada.Models
@using PalavraConectada.Services
@inject BibleApiService BibleApi

<!-- Componente de busca - o cora√ß√£o da aplica√ß√£o -->
<div class="verse-search-container">
    <div class="header">
        <h1>üìñ Palavra Conectada</h1>
        <p class="subtitle">Encontre vers√≠culos b√≠blicos relacionados √†s suas palavras e sentimentos</p>
    </div>

    <!-- √Årea de busca -->
    <div class="search-section">
        <div class="search-box">
            <input 
                type="text" 
                @bind="searchTerm" 
                @bind:event="oninput"
                @onkeyup="HandleKeyPress"
                placeholder="Digite uma palavra ou frase (ex: amor, paz, esperan√ßa...)"
                class="search-input"
            />
            
            <select @bind="selectedVersion" class="version-select">
                @foreach (var version in availableVersions)
                {
                    <option value="@version.Code">@version.Name</option>
                }
            </select>
        </div>

        <div class="button-group">
            <button @onclick="SearchVerses" disabled="@isLoading" class="btn btn-primary">
                @(isLoading ? "Buscando..." : "üîç Buscar Vers√≠culos")
            </button>
            
            <button @onclick="GetRandomVerse" disabled="@isLoading" class="btn btn-secondary">
                üé≤ Vers√≠culo Aleat√≥rio
            </button>
        </div>
    </div>

    <!-- Exemplos de busca -->
    @if (searchResult == null && !isLoading)
    {
        <div class="examples-section">
            <p class="examples-title">Sugest√µes de busca:</p>
            <div class="examples-grid">
                @foreach (var example in exampleSearches)
                {
                    <button 
                        @onclick="() => UseExample(example.Term)"
                        class="example-btn"
                        disabled="@isLoading">
                        @example.Term
                    </button>
                }
            </div>
        </div>
    }

    <!-- Mensagem de erro -->
    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="error-message">
            ‚ö†Ô∏è @errorMessage
        </div>
    }

    <!-- Loading spinner -->
    @if (isLoading)
    {
        <div class="loading">
            <div class="spinner"></div>
            <p>Buscando na Palavra de Deus...</p>
        </div>
    }

    <!-- Resultados da busca -->
    @if (searchResult != null && searchResult.Occurrence > 0)
    {
        <div class="results-section">
            <div class="results-header">
                <h2>üìö Resultados da Busca</h2>
                <p class="results-count">
                    Encontrados <strong>@searchResult.Occurrence</strong> 
                    vers√≠culo(s) em <strong>@selectedVersion.ToUpper()</strong>
                </p>
            </div>

            <div class="verses-container">
                @for (int i = 0; i < searchResult.Verses.Count; i++)
                {
                    var verse = searchResult.Verses[i];
                    var animationDelay = $"{i * 0.1}s";
                    
                    <div class="verse-card animate-in" style="animation-delay: @animationDelay">
                        <div class="verse-reference">
                            @GetVerseReference(verse)
                        </div>
                        
                        <div class="verse-text">
                            "@verse.Text"
                        </div>
                        
                        <div class="verse-footer">
                            <span class="verse-version">@searchResult.Version.ToUpper()</span>
                        </div>
                    </div>
                }
            </div>

            @if (searchResult.Verses.Count < searchResult.Occurrence)
            {
                <div class="more-results">
                    <p>Mostrando @searchResult.Verses.Count de @searchResult.Occurrence vers√≠culos</p>
                </div>
            }
        </div>
    }
</div>

@code {
    private string searchTerm = string.Empty;
    private string selectedVersion = "nvi";
    private SearchResult? searchResult;
    private bool isLoading = false;
    private string errorMessage = string.Empty;

    // Vers√µes dispon√≠veis da B√≠blia
    private List<BibleVersion> availableVersions = new()
    {
        new() { Code = "nvi", Name = "Nova Vers√£o Internacional" },
        new() { Code = "acf", Name = "Almeida Corrigida Fiel" },
        new() { Code = "aa", Name = "Almeida Revista e Atualizada" }
    };

    // Exemplos de buscas para ajudar o usu√°rio
    private List<ExampleSearch> exampleSearches = new()
    {
        new() { Term = "amor", Description = "Vers√≠culos sobre amor" },
        new() { Term = "f√©", Description = "Vers√≠culos sobre f√©" },
        new() { Term = "esperan√ßa", Description = "Vers√≠culos sobre esperan√ßa" },
        new() { Term = "paz", Description = "Vers√≠culos sobre paz" },
        new() { Term = "sabedoria", Description = "Vers√≠culos sobre sabedoria" }
    };

    // Busca vers√≠culos baseado no termo inserido
    private async Task SearchVerses()
    {
        if (string.IsNullOrWhiteSpace(searchTerm))
        {
            errorMessage = "Por favor, insira uma palavra ou frase para buscar.";
            return;
        }

        isLoading = true;
        errorMessage = string.Empty;
        searchResult = null;

        try
        {
            var result = await BibleApi.SearchVersesAsync(searchTerm, selectedVersion);
            searchResult = result;

            if (result?.Occurrence == 0)
            {
                errorMessage = "Nenhum vers√≠culo encontrado com este termo.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Erro ao buscar vers√≠culos. Tente novamente.";
            Console.WriteLine($"Erro: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    // Busca vers√≠culo aleat√≥rio - deixar Deus surpreender
    private async Task GetRandomVerse()
    {
        isLoading = true;
        errorMessage = string.Empty;
        searchResult = null;

        try
        {
            var verse = await BibleApi.GetRandomVerseAsync(selectedVersion);
            
            if (verse != null)
            {
                searchResult = new SearchResult
                {
                    Occurrence = 1,
                    Version = selectedVersion,
                    Verses = new List<Verse> { verse }
                };
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Erro ao buscar vers√≠culo. Tente novamente.";
            Console.WriteLine($"Erro: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    // Usar um dos exemplos de busca
    private async Task UseExample(string term)
    {
        searchTerm = term;
        await SearchVerses();
    }

    // Lidar com a tecla Enter
    private async Task HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await SearchVerses();
        }
    }

    // Formatar refer√™ncia do vers√≠culo
    private string GetVerseReference(Verse verse)
    {
        return $"{verse.Book?.Name} {verse.Chapter}:{verse.Number}";
    }

    // Classe auxiliar para exemplos
    private class ExampleSearch
    {
        public string Term { get; set; } = string.Empty;
        public string Description { get; set; } = string.Empty;
    }
}

